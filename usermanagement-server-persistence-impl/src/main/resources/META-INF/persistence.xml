<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  
    <persistence-unit name="usermanagementPersistenceUnit" transaction-type="JTA">
    	<jta-data-source>${data.source.jndi.name}</jta-data-source>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.ScopeType</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.Scope</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.FunctionCategory</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.Function</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.FunctionScope</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.Profile</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.ProfileFunction</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.Service</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.Resource</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.ServiceResource</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.role.ProfileServiceResource</class>
    	
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.User</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.Account</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.UserAccount</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.UserAccountProfile</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.Service</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.UserAccountFunctionScope</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.UserAccountInterim</class>
    	<class>ci.gouv.dgbf.system.usermanagement.server.persistence.entities.account.UserAccountInterimModel</class>
    	
    	<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="false"/>
			
			<property name="hibernate.jdbc.batch_size" value="25"/> 
			<property name="hibernate.order_inserts" value="true"/>
			<property name="hibernate.order_updates" value="true"/>
			
			<property name="hibernate.jdbc.fetch_size" value="100"/>
			<property name="hibernate.query.in_clause_parameter_padding" value="true"/>
		</properties>

    </persistence-unit>  
</persistence>